<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">

  <display-name>StudentRepository</display-name>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <!-- Login Servlet -->

  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.aman.java.student.servlet.LoginServlet</servlet-class>
  </servlet>

  <!-- Login Servlet Mapping -->

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Register Student Servlet -->

  <servlet>
    <servlet-name>RegisterStudentServlet</servlet-name>
    <servlet-class>com.aman.java.student.servlet.RegisterStudentServlet</servlet-class>
  </servlet>

  <!-- Register Student Servlet Mapping -->

  <servlet-mapping>
    <servlet-name>RegisterStudentServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

  <!-- View Student Servlet -->

  <servlet>
    <servlet-name>ViewStudentServlet</servlet-name>
    <servlet-class>com.aman.java.student.servlet.ViewStudentServlet</servlet-class>
  </servlet>

  <!-- View Student Servlet Mapping -->

  <servlet-mapping>
    <servlet-name>ViewStudentServlet</servlet-name>
    <url-pattern>/viewStudent</url-pattern>
  </servlet-mapping>

